.set LOCALID_MEWTWO, 1

OldLabIsland_Interior_2F_MapScripts::
	map_script MAP_SCRIPT_ON_TRANSITION, OldLabIsland_Interior_2F_OnTransition
	map_script MAP_SCRIPT_ON_RESUME, OldLabIsland_Interior_2F_OnResume
	.byte 0

OldLabIsland_Interior_2F_OnTransition:
	call_if_set FLAG_CAUGHT_MEWTWO, OldLabIsland_Interior_2F_EventScript_HideMewtwo
	call_if_unset FLAG_CAUGHT_MEWTWO, OldLabIsland_Interior_2F_EventScript_TryShowMewtwo
	end

OldLabIsland_Interior_2F_EventScript_HideMewtwo::
	setflag FLAG_HIDE_MEWTWO
	return

OldLabIsland_Interior_2F_EventScript_TryShowMewtwo::
	goto_if_set FLAG_DEFEATED_MEWTWO, Common_EventScript_NopReturn
	clearflag FLAG_HIDE_MEWTWO
	return

OldLabIsland_Interior_2F_OnResume:
	call_if_set FLAG_SYS_CTRL_OBJ_DELETE, OldLabIsland_Interior_2F_EventScript_TryRemoveMewtwo
	end

OldLabIsland_Interior_2F_EventScript_TryRemoveMewtwo::
	specialvar VAR_RESULT, GetBattleOutcome
	goto_if_ne VAR_RESULT, B_OUTCOME_CAUGHT, Common_EventScript_NopReturn
	removeobject LOCALID_MEWTWO
	return

OldLabIsland_Interior_2F_EventScript_Mewtwo::
	lock
	playmoncry SPECIES_MEWTWO, CRY_MODE_ENCOUNTER
	delay 40
	waitmoncry
	setwildbattle SPECIES_MEWTWO, 70
	setflag FLAG_SYS_CTRL_OBJ_DELETE
	special BattleSetup_StartLegendaryBattle
	waitstate
	clearflag FLAG_SYS_CTRL_OBJ_DELETE
	specialvar VAR_RESULT, GetBattleOutcome
	goto_if_eq VAR_RESULT, B_OUTCOME_WON, OldLabIsland_Interior_2F_EventScript_DefeatedMewtwo
	goto_if_eq VAR_RESULT, B_OUTCOME_RAN, OldLabIsland_Interior_2F_EventScript_RanFromMewtwo
	goto_if_eq VAR_RESULT, B_OUTCOME_PLAYER_TELEPORTED, OldLabIsland_Interior_2F_EventScript_RanFromMewtwo
	setflag FLAG_CAUGHT_MEWTWO
	release
	end

OldLabIsland_Interior_2F_EventScript_DefeatedMewtwo::
	setflag FLAG_DEFEATED_MEWTWO
	setvar VAR_0x8004, SPECIES_MEWTWO
	goto Common_EventScript_LegendaryRanAway
	end

OldLabIsland_Interior_2F_EventScript_RanFromMewtwo::
	setvar VAR_0x8004, SPECIES_MEWTWO
	goto Common_EventScript_LegendaryRanAway
	end

OldLabIsland_Interior_2F_EventScript_OldSeaMap::
	finditem ITEM_OLD_SEA_MAP
	setflag FLAG_ENABLE_SHIP_FARAWAY_ISLAND
	setflag FLAG_RECEIVED_OLD_SEA_MAP
	end
